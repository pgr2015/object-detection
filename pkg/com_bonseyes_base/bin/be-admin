#!/usr/bin/env python3
import logging
import sys
import os

logging.basicConfig(format='%(asctime)s %(levelname)-8s [%(filename)s:%(lineno)d] %(message)s',
                    datefmt='%d-%m-%Y:%H:%M:%S',
                    level=logging.INFO)

# FIXME: this doesn't work if the script is symlinked
BIN_PATH = os.path.dirname(os.path.abspath(__file__))
COM_BONSEYES_BASE_PATH = os.path.dirname(BIN_PATH)
BASE_PATH = os.path.dirname(COM_BONSEYES_BASE_PATH)

sys.path.append(BASE_PATH)

import com_bonseyes_base.lib.cli.__main__ as main

main.main()
